<% if page.current? %>
  <%= link_to url, class: 'relative z-10 inline-flex items-center bg-indigo-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600', title: page, remote: remote do %>
    <%= page %>
  <% end %>
<% else %>
  <%= link_to url, class: 'relative hidden items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0 md:inline-flex', title: page, remote: remote do %>
    <%= page %>
  <% end %>
<% end %>