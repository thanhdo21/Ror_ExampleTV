<% content_for :page_title, "Albums" %>
<%= link_to "Create Album",new_admin_album_path, class: "bg-blue-700 text-white hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
<div class="my-5"> 
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <table class="border-collapse border border-slate-400">
  <thead>
    <tr>
      <th class="border border-slate-300">Name</th>
      <th class="border border-slate-300">Artist</th>
      <th class="border border-slate-300">Function</th>
    </tr>
  </thead>
  <tbody>
    <%= render @albums %>
  </tbody>
</table>
</div>
    <%= paginate @albums %>
    

