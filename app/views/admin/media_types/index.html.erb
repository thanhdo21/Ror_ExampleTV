<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <%= link_to "New Media Type", new_admin_media_type_path, class: "rounded-lg py-3 px-5 bg-blue-600 block font-medium" %>
  </div>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Media types</h1>
    <%= link_to "New media type", new_admin_media_type_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="admin_media_types" class="min-w-full">
     <table class="table-auto">
  <thead>
    <tr>
      <th>Name</th>
      <th>Function</th>
    </tr>
  </thead>
  <tbody>
    <%= render @admin_media_types %>
  </tbody>
</table>
  </div>
</div>
